doctype html
html(lang='en')
    include mixins

    head
        title GT4CC Rankings

        meta( charset='utf-8' )
        meta( name='viewport', content='width=device-width, initial-scale=1.0' )

        +favicon()
        +bootstrap_css()
        link( href='/css/ponkbot.css', rel='stylesheet' )
        link( href='/css/gt4cc.css', rel='stylesheet' )
body
  nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
    .container-fluid
      a.navbar-brand(href='/home') PonkBot
      .collapse.navbar-collapse
        ul.navbar-nav.me-auto.mb-2.mb-lg-0
          each label, link in links
            li.nav-item
              a.nav-link(href=link)= label

  .container.mt-4
    h1 GT4CC Rankings
    
    ul#gt4ccTabs.nav.nav-tabs(role='tablist')
      li.nav-item(role='presentation')
        button#championship-tab.nav-link.active(data-bs-toggle='tab', data-bs-target='#championship', type='button', role='tab') Championship
      li.nav-item(role='presentation')
        button#races-tab.nav-link(data-bs-toggle='tab', data-bs-target='#races', type='button', role='tab') Races

    .tab-content.mt-3
      #championship.tab-pane.fade.show.active(role='tabpanel')
        h2 Championship Standings
        #championship-table
          p Loading...
      
      #races.tab-pane.fade(role='tabpanel')
        .row
          .col-md-4
            h2 Races
            #races-list.list-group
              p Loading...
          .col-md-8
            h2 Race Results
            #race-details
              p Select a race to see results

  +bootstrap_js()
  script( type='text/javascript', src='/js/gt4cc.js')
